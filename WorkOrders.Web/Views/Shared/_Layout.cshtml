<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/themes/base/css")
</head>
<body>
    <div id="userSettings" class="not-printable">
        @Html.Partial("_LanguageChooser")
        @Html.Partial("_UserSettings")
    </div>

    <div id="body">
        @RenderBody()
    </div>

    <footer class="not-printable">
        <nav>
            <ul id="menu">
                @*<li>@Html.ActionLink("Radni nalozi", "Index", "Home", new { area = "" }, null)</li>*@
                @*<li>@Html.ActionLink("API", "Index", "Help", new { area = "HelpPage" }, null)</li>*@
            </ul>
        </nav> 
        @*<p>Learn more about <a href="http://go.microsoft.com/fwlink/?LinkId=273732">Single Page Applications</a></p>*@
        <p>&copy; @DateTime.Now.Year - <a href="http://twitter.com/goranobradovic">@@goranobradovic</a></p>
    </footer>
    <script type="text/javascript">
        var urlroot = '@Url.Action("")';
        var culture = @UICulture;
    </script>
    @Scripts.Render("~/bundles/libs")
    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")*@
    @Scripts.Render("~/bundles/ajaxlogin")
    @RenderSection("scripts", required: false)
</body>
</html>